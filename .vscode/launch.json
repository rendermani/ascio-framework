    "version": "0.2.0",
    "configurations": [         
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/code": "${workspaceRoot}"
              }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "port": 9003,
            "runtimeExecutable": "${workspaceRoot}/bin/php.bat",
            "pathMappings": {
                "/code": "${workspaceRoot}"
              },
              "debug" : true 
        }
    ]
}